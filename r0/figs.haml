!!!
-require_relative "page.rb"
%head
  %title="#{TITLE} の図"
  %link{ href:"../2022.css", rel:'stylesheet', type:'text/css' }
  :css
    svg.svg {
      border: solid #888 1px;
    }  

%h1 #{TITLE} の 図
%a{ href:"./index.html" } 本文

-EXAMPLES.each.with_index do |src,ix|
  %h2 ##{ix}
  %p
    src:
    %code=src
    expected:
    %code=solve(src)
  %div.svg
    -fig=Fig.new(src, 600)
    %svg.svg{ height:fig.pix_h, width:fig.pix_w, viewBox:fig.vbox }
      %defs
        %radialGradient{ cx:0, cy:0, id:"green", r:1 }
          %stop{ offset:"0%", "stop-color"=>"#2f2" }
          %stop{ offset:"100%", "stop-color"=>"#afa" }
      %g{ "stroke-width"=>fig.pix(1), stroke:"black", fill:"url(#green)"}
        -fig.squares.each do |t|
          %polygon{ points:t.map{ |e| "#{e.real.to_f} #{e.imag.to_f}" }.join(",") }
    
  